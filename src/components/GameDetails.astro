---
const { awayTeam, homeTeam } = Astro.props;
---

<div class="flex justify-around">
  <div class="flex-1 flex flex-col justify-around items-center">
    <div class="avatar">
      <div class="w-8">
        <img src={ awayTeam.logos.at(0)?.href } />
      </div>
    </div>
    <div class="font-bold">{ awayTeam.shortDisplayName }</div>
  </div>

  <div class="text-center text-xl font-bold">@</div>

  <div class="flex-1 flex flex-col justify-center items-center">
    <div class="avatar">
      <div class="w-8">
        <img src={ homeTeam.logos.at(0)?.href } />
      </div>
    </div>
    <div class="font-bold">{ homeTeam.shortDisplayName }</div>
  </div>
</div>
